<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>TASKER || Event</title>
<link rel="stylesheet" type="text/css" href="../public/css/style.css" />
<script type="text/javascript">
window.onload = function()
{
	var obj = document.getElementById("chatroom");
	var events = document.getElementById("events");
	var a_event = events.getElementsByTagName("a");
	var eventname = document.getElementById("eventname");
	for(var i = 0;i<a_event.length;i++){
		a_event[i].index = i;
		a_event[i].onclick = function(){
			obj.style.display = "block";
			/**/
			eventname.innerHTML = a_event[this.index].innerHTML;
		}
	}
}



</script>
</head>
<body>
	<div class="bg_top">
		<div class="header_bg">
			<div class="header"></div>
		</div>
	</div>
	<div class="page_box page_box_bg">
		<div class="home_menu">
			<a id="homeBtn" href="/home"></a>
		</div>
		<div class="index_left page_left geam_l">
			<div class="title">events</div>
			<table id="events" width=320px cellpadding="0" cellspacing="0" class="yx" style="margin-top: 30px;">
				<% resData.forEach(function(item){ %>
					<tr>
						<td><a href="#"><%= item.name %></a></td>
					</tr>
				<% }) %>
			</table>
		</div>
		<div class="index_right page_right geam_r">
			<div id="chatroom" class="chatroom" style="display:none;">
				<div id="eventname" align="right"></div>
				<div class="game_box"></div>
				<div class="t_box">
				<textarea rows="6" cols="40" class="message"></textarea>
					<div class="no1_cloud"></div>
				</div>
			</div>
		</div>
		<div class="page_right_menu">
			<form>
			<ul>
				<li class="menu_1"><a id="info" title="Info"></a></li>
                <li class="menu_2"><a id='task' title="Task"></a></li>
                <li class="menu_5"><a class="on" title="Event"></a></li>
                <li class="menu_6"><a id='news' title="New"></a></li>
                <li class="menu_4"><a id='about' title="About"></a></li>
			</ul>
			</form>
		</div>
		</div>
	<div class="page_bot"></div>
	<div class="footer">
		<div class="footer_right">
			<p>Copyright&copy;2017 F5.</p>
		</div>
	</div>
	<script src="../public/js/jquery-1.11.2.min.js"></script>
    <script type="text/javascript" src="../public/js/ajax.js"></script>>
    <script src="../public/js/bootstrap.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="../public/js/js.js"></script>
</body>
</html>
